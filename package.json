{
    "name": "react-hotel",
    "version": "1.0.0",
    "type": "module",
    "description": "hotel application built with MERN stack",
    "main": "server.js",
    "scripts": {
        "start": "node backend/server.js",
        "server": "nodemon backend/server.js",
        "client": "npm start --prefix frontend",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "data:import": "node backend/seeder",
        "data:destroy": "node backend/seeder -d"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@tanstack/react-query": "^4.35.7",
        "bcryptjs": "^2.4.3",
        "colors": "^1.4.0",
        "cookie-parser": "^1.4.6",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.6.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1"
    },
    "devDependencies": {
        "concurrently": "^8.2.1",
        "dotenv": "^16.3.1",
        "nodemon": "^3.0.1"
    }
}
